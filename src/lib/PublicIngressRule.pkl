open module no.polarismedia.pkltime.DockerImage

host: String
// List of paths for the ingress rule. Each path must start with a '/' and can contain alphanumeric characters, '-', '.', '_', '~', '!', '$', '&', ''', '(', ')', '+', ',', ';', '=', ':', '@', and '%'. Paths must not contain spaces or other special characters.
paths: List<String(isValidIngressPath)>
port: Int = 80

local isValidIngressPath = (str: String) -> str.matches(Regex(#"^/(?:[A-Za-z0-9._~!$&'()+,;=:@%-]+(?:/[A-Za-z0-9._~!$&'()+,;=:@%-]+)*)?/?$"#))
