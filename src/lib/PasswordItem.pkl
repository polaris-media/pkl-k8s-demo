module no.polarismedia.pkltime.AdditionalOnePasswordItem
/// Name of the item.
/// It must consist of lowercase alphanumeric characters (a-z, 0-9), hyphens (-), or dots (.).
/// It must start and end with an alphanumeric character.
name: String(isValidKubernetesResourceName)
/// Path to the item in 1Password.
itemPath: String

autoRestart: Boolean = true

local isValidKubernetesResourceName = (str: String) -> str.matches(Regex(#"[a-z0-9]([-a-z0-9]*[a-z0-9])?(\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*"#))
